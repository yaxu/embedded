d1 $ chunk 4 (# speed 2) $ jux rev $ fast "1 <2 1> <1 2> 1" $ n (run 8 + "<0 2>") # sound "micron"


d2 $ degradeBy 0.3 $ off 0.25 (# s "pulse") $ jux rev $ off 0.25 (|+| n "<12 7 12>") $ never (chop "<8 6>") $ slow 2 $ n "d6(3,8,<0 4>) a6 c6*2 e6" # sound "rash"
