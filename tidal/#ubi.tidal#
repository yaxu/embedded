d2 $ slow 4 $ density' "<1 2>" $ off 0.5 (slow 2 . spread (chop) [3,4,2]) $ jux (0.125 <~) $ off 0.125 (# crush 4) $ off 0.25 (# (speed 2 # vowel "a e")) $ runWith 4 (density 2) $ sound "drum future:1*2"
  # speed 1.5
  # shape 0.3

