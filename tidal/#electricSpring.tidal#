let jux f p = stack [p |+| pan (pure (5/8)), f $ p |+| pan (pure (1/8))]

-- stut pan

-- number 9

-- tabby

-- comb delay drop

-- sine nudge chop

-- repetition

-- deconstructed liquid gabba


d1 $ slow 4 $ n (run 8) # sound "wobble"
  # pan saw1

d1 $ off 0.25 ((# crush "5") . (|+| pan "0.25")) $ jux' [id, rev] $ sound "jungbass:8(3,8,<2,4>)"
  # pan "0 0.5"



d1 $ jux (|+| speed "2") $ off 0.25 (|+| up "7") $ (runWith 4 (density 2) $ every 2 rev $ slowspread (chop) [128,32] $ sound "leaf" # n (irand 8))
  # pan saw1


d1 $ jux' [id,(0.25 <~),rev] $ n (offadd 0.25 7 $ slow 2 "c7(3,8) e6*2") # sound "rash"

d2 $ jux rev $ runWith 4 (density 1.5 . (|*| speed "1.5")) $ loopAt 4 $ chop 8 $ sound "shackup"