
d1 $ do x <- slow 8 saw
        juxBy (x) rev $ linger "<1 0.5 0.75 0.5>" $ n "0 ~ 8 [~ 5] 0 [~ 9] ~ [7 5*2]" # sound "micron"
  # room 0.5
  # size 0.4
  # orbit 1

d2 $ degradeBy "<0.25 0.5>" $ (juxBy 0.25 rev $ (chop 64 $ n "d6 c5(3,8)" # sound "rash"))
  # gain 1.2
  # shape 0.3
  # lpq "<0.3 0.34>"
  # lpf (density "<1 2 3 4>" $ sine * 2000 + 1000)
  |+| n "<0 7 12 7>"

d4 $ slow 2 $ off "<0.25 0.5>" (# s "pulse") $ n "d7(3,8) [c6*2 ~ c6(3,8)] a6(3,8) e7(3,8)" # sound "jx"
  # gain 1.5
  # lpq "<0.3 0.34>"
  # lpf (density "<1 2 3 4>" $ sine * 300 + 500)

d5 $ whenmod 8 4 (linger 0.25) $ n ((run 16) + "<4 2>") # sound "micron"
  # gain 1.3
  # crush 4

d6 $ sound "~ [~ off]"
  # shape 0.7