import Sound.OSC.FD

let oscport = 9000
    startcps = do s <- udpServer "127.0.0.1" oscport
                  oscLoop s
    oscLoop s cps = do m <- recvMessage s
                       act m
                       oscLoop s
    act (Just (Message "/notes" xs)) =
      do putStrLn $ show xs
         return ()
    act _ _ = return ()

